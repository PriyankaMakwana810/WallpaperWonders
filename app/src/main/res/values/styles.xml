<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary_CC006C67</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:fitsSystemWindows">true</item>

        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.AppTheme</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyPopupTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="colorAccent">@color/black</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="login_edit_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:background">@drawable/ic_white_background_edit_text_square</item>
        <item name="android:gravity">start|center</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>
</resources>